<% layout("/layouts/boilerplate") %>
<h3>All listings</h3>
<div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-2 g-4">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-links">

        <div class="card" style="width: 18rem;">
            <img src="<%= listing.image%>" class="card-img-top" alt="Listing Image" style="height:16rem;">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%= listing.title %><br/></b>
                    &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
                </p>
            </div>
        </div>
    <% } %>
    </a>
</div>